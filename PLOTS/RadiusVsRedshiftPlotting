f,ax=plt.subplots(3,1,sharex=True)
ax[0].plot(zbest,SBe,',')
ax[1].plot(zbest,M,',')
ax[2].plot(zbest,rkpc,',')
plt.subplots_adjust(hspace=0,wspace=0)
ax[0].set_ylim(24,15)
ax[1].set_ylim(-15,-25)
ax[2].set_ylim(0,20)
ax[0].set_ylabel('$\mu$')
ax[1].set_ylabel('M$_{B}$')
ax[2].set_ylabel('Radius (")')



plt.scatter(M,rkpc,c=zbest)
plt.ylim(0,20)
plt.xlabel('Absolute Magnitude')
plt.ylabel('Radius (kpc)')
cb=plt.colorbar()
cb.set_label('Redshift')
